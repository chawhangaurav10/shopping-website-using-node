doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")
    body 
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a.active(href="/") Shop
                    li.main-header__item
                        a(href="/admin/add-product") Add Product
        main
            .grid
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title} 
                        div.card__image
                            img(src="https://pixabay.com/get/g06712938372d95bbb0d3902f21832fcb61b6962b419d5d69f2361705548269d95e84748fd85303bd7c179367814f9fd59c3af145a459c9874749455a5ecfbbc894b17cb3e4026ebd29aac0dbe7e982ca_1280.png", alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very useful book and has many pictures.
                        .card__actions
                            button.btn Add to cart